OUTPUT_FORMAT(elf32-i386)
ENTRY(start)

__align_size = 0x1000;
__Kernel_Memory_Start = 0xC0000000; /* Start Kernel at 3GB */

SECTIONS
{
    /******************************************************************************
    *                              BOOTING SECTTIONS                              *
    ******************************************************************************/

	/* . = 0x00100000; */
	/* .multiboot.text :
	{
		*(.multiboot.text)
	}
	.multiboot.bss :
	{
		*(.multiboot.bss)
	}
	.multiboot.data :
	{
		*(.multiboot.data)
	}
	.multiboot.rodata :
	{
		*(.multiboot.rodata)
	} */

    /******************************************************************************
    *                               KERNEL SECTIONS                               *
    ******************************************************************************/

	. = 0xC0100000;
	_kernel_start = .;

    .text : AT(ADDR(.text) - 0xC0000000)
	{
		_code_section = .;
		/* *(.multiboot) */
		*(.text)
		*(.rodata*)
	}
	/* Read-only data. */
	/* .rodata ALIGN(__align_size) : AT(ADDR(.rodata) - __Kernel_Memory_Start)
	{
		_rodata_section = .;
		*(.rodata)
	} */
	/* Read-write data (initialized) */
	.data ALIGN(__align_size) : AT(ADDR(.data) - 0xC0000000)
	{
		_data_section = .;
		*(.data)
	}
	/* Read-write data (uninitialized) and stack */
	.bss : AT(ADDR(.bss) - 0xC0000000)
	{
		_bss_section = .;
		*(COMMON)
		*(.bss)
		_end_bss_section = .;
	}

	_kernel_end = .;
}